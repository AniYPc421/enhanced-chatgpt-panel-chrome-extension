{
  "manifest_version": 3,
  "name": "Enhanced ChatGPT Panel",
  "version": "0.0.2",
  "description": "A Chrome extension that brings ChatGPT to your browser panel",
  "permissions": [
    "sidePanel",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "ChatGPT Panel Chrome Extension"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "js/data/i18n/en/strings.js",
        "js/data/i18n/zh-cn/strings.js",
        "js/data/i18n/runtime.js",
        "js/storage/storage.js",
        "js/content.js",
        "js/chatgpt-bridge/context.js",
        "js/chatgpt-bridge/capabilities.js",
        "js/chatgpt-bridge/runtime.js",
        "js/page-snapshot/chatgpt-panel-button-injector.js",
        "js/page-snapshot/chatgpt-handler.js",
        "js/quote-text/chatgpt-handler.js"
      ],
      "css": [
        "css/page-snapshot-panel-button.css"
      ],
      "all_frames": true,
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "exclude_matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "js/data/i18n/en/strings.js",
        "js/data/i18n/zh-cn/strings.js",
        "js/data/i18n/runtime.js",
        "js/storage/storage.js",
        "js/page-snapshot/page-context-button-injector.js",
        "js/page-snapshot/page-context.js"
      ],
      "css": [
        "css/page-snapshot-page-button.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
